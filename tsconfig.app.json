{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [
      "@angular/localize"
    ]
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts"
  ],

  /*
    Temporary: relax strict template type-checking to bypass the
    `ÉµassertType` / template-check errors while we fix the components.
    Remove this and set to true again once the templates are updated.
  */
  "angularCompilerOptions": {
    "strictTemplates": false
  }
}
